<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orderfood_sqlite">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Camera Storage Permissions for image pick -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrderFood_SQLite">
        <activity android:name=".ThanhToanActivity"></activity>
        <activity
            android:name=".PopUpSoLuongActivity"
            android:label="@string/soLuong"
            android:theme="@style/popUpActivity" />
        <activity
            android:name=".ThemLoaiThucDonActivity"
            android:label="@string/themLoaiThucDon"
            android:theme="@style/popUpActivity" />
        <activity android:name=".ThemThucDonActivity" />
        <activity
            android:name=".PopUpThemBanAnActivity"
            android:label="@string/themBanAn"
            android:theme="@style/popUpActivity" />
        <activity android:name=".DangNhap_DangKyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
    </application>

</manifest>