<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgItemThanhToan"
                android:src="@drawable/logo"
                android:layout_margin="@dimen/size5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size100dp">

            </ImageView>

            <TextView
                android:textAlignment="center"
                android:id="@+id/txtTenMonAnThanhToan"
                android:layout_margin="@dimen/size5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món ăn"
                android:textSize="@dimen/size18sp"
                android:textStyle="bold"/>
        </LinearLayout>


        <TextView
            android:textAlignment="center"
            android:id="@+id/txtSoLuongThanhToan"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:layout_weight="1"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            />

        <TextView
            android:textAlignment="center"
            android:id="@+id/txtGiaTienThanhToan"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giá tiền"
            android:layout_weight="1"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>