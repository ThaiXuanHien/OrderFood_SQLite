<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5">

            <ImageView
                android:src="@drawable/nguoidung"
                android:id="@+id/imgItemNguoiDung"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size100dp">

            </ImageView>
        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/size10dp">

            <TextView
                android:layout_margin="@dimen/size10dp"
                android:id="@+id/txtTenItemNguoiDung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size18sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:layout_margin="@dimen/size10dp"
                android:id="@+id/txtSDTItemNguoiDung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>